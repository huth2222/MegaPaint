@model MP_ProductCategory
@{
    Layout = null;
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>หมวดหมู่สินค้า</h1>
            </div>
            <div class="col-sm-6">
                <div class="btn-group btn-group-toggle float-sm-right" data-toggle="buttons">
                  <label id="l_form_edit" class="btn bg-olive">
                    <input type="radio" name="form_active" id="b_form_edit" autocomplete="off"> <i id="i_form_edit" class="fas fa-plus"></i> ฟอร์มแก้ไข
                  </label>
                  <label class="btn bg-olive">
                    <input id="l_form_add" type="radio" name="form_active" id="b_form_add" autocomplete="off"> <i id="i_form_add" class="fas fa-plus"></i> ฟอร์มเพิ่ม
                  </label>
                  <label class="btn bg-olive" active hidden>
                    <input type="radio" name="form_active" id="b_form_cancel" autocomplete="off" checked>Cancel
                    
                  </label>
                  <input type="text" id="active_form">
                </div>
                @* <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><button type="button" id="b_form" class="btn btn-outline-warning btn-block" style="width: 50px;"><i id="i_form" class="fas fa-plus"></i> ฟอร์มแก้ไขหมวดหมู่สินค้า</button></li>
                    <li class="breadcrumb-item"><button type="button" id="b_form" class="btn btn-outline-success btn-block"><i id="i_form" class="fas fa-plus"></i> ฟอร์มเพิ่มหมวดหมู่สินค้า</button></li>
                </ol> *@
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>



<!-- Main content -->
<section class="content" id="section_cateory">
    <form asp-action="Category" id="form_category" asp-controller="Product" method="POST" enctype="multipart/form-data"
        asp-antiforgery="true" target="_blank">
        <input type="text" asp-for="category_code">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-outline card-info">
                    <div class="card-body">
                        <div class="row">
                            <div class="form-group col-12">
                                <label>ชื่อหมวดหมู่สินค้า</label>
                                <input type="text" asp-for="category_name_th" class="form-control">
                            </div>                                                     
                        </div>
                        <div class="row">
                            <div class="form-group col-12">
                                <label>รายละเอียด/หมายเหตุ</label>
                                <textarea asp-for="category_detail" class="form-control" rows="4" style="width: 100%;"></textarea>
                            </div>                                           
                        </div>                                             
                    </div>
                    <!-- /.card-header -->
                </div>
            </div>
            <!-- /.col-->
        </div>
        <!-- ./row -->



        <div class="form-group text-right">
            <button type="button" id="btn_submit" style="width: 100px;" class="btn btn-primary">Add</button>
        </div>
        <div class="row">
            <button type="button" hidden id="btn_alert" class="btn btn-primary" data-toggle="modal"
                data-target="#exampleModal">
                Launch demo modal
            </button>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">ยืนยันการบันทึก</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        @* <div class="modal-body">
                            ...
                            </div> *@
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cencel</button>
                            <button type="button" onclick='javascript:GetSubmit("Form");' class="btn btn-primary"
                                data-dismiss="modal">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <!-- ./row -->
</section>

<section id="account_list" class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12" style="font-size: 14px;">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">รายชื่อหมวดหมู่สินค้า</h3>
                    </div>
                    <div class="card-body">
                        <table id="t_categorylist" class="table table-bordered text-center">

                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/js/Product/Category/Fuc.js"></script>
<script src="~/js/Product/Category/Form.js"></script>
